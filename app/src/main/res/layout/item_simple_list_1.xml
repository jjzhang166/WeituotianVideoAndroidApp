<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:clickable="true"
        android:layout_margin="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp">

            <ImageView
                android:id="@+id/civ_cover"
                android:layout_width="96dp"
                android:layout_height="54dp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/civ_cover"
                android:layout_toEndOf="@id/civ_cover"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="技术鸟：NiaoTech"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:layout_alignLeft="@id/tv_title"
                android:layout_alignStart="@id/tv_title"
                android:layout_marginTop="4dp"
                android:lines="2"
                android:ellipsize="end"
                android:text="纵观技术的发展，紧跟时代的潮流，活在自己的世界，分享技术的小圈。上谈【安卓】，下论【苹果】。以扯淡的态度，面对操蛋的技术，用幽默的语言，诠释开发的经典。"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_content"
                android:layout_marginTop="4dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="4天以前"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>