<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <!--自定义的视频播放view-->
    <com.weituotian.mycommonvideo.view.VideoPlayerView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        >
    </com.weituotian.mycommonvideo.view.VideoPlayerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.3"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn_open_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open_video" />

            <Button
                android:id="@+id/btn_upload_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_upload_video"
                android:layout_below="@+id/btn_open_video"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/btn_screen_shot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/screen_shot"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/btn_open_video"
                android:layout_toEndOf="@+id/btn_open_video" />

            <Button
                android:id="@+id/btn_upload_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_upload_cover"
                android:layout_alignBaseline="@+id/btn_upload_video"
                android:layout_alignBottom="@+id/btn_upload_video"
                android:layout_toRightOf="@+id/btn_upload_video"
                android:layout_toEndOf="@+id/btn_upload_video" />

        </RelativeLayout>

        <ImageView
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


</LinearLayout>